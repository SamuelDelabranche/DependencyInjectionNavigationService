<UserControl x:Class="DependencyInjectionNavigationService.MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DependencyInjectionNavigationService.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="#252525">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Home View"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Foreground="White" />

            <Button Content="Other View"
                    Padding="10"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0 20 0 0"
                    Command="{Binding NavigateToOther}"/>
        </StackPanel>
        <TextBlock Text="{Binding constructeurNumber}"
                   Foreground="White"
                   IsHitTestVisible="False" />
    </Grid>
</UserControl>
